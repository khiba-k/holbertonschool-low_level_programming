#include "main.h"

/**
 *_pow_recursion - function returns value of x raised to the power y 
 *@a: parameter of base
 *parameter of exponent
 *Return: value to return
 */
int _pow_recursion(int x, int y)
{
if (y < 0)
return (-1);
if (y == 1)
return (x);
if (y > 1)
return ( x * _pow_recursion(x, y - 1));
else
return (1);
}
